# Production Environment Variables
# Copy this file to .env.production and fill in the values

# JWT Configuration
JWT_KEY=YourSuperSecretKeyForJwtTokenGenerationMinimum32Characters!
JWT_ISSUER=DiscountManager
JWT_AUDIENCE=DiscountManagerClients

# SQL Server Configuration
SQL_SA_PASSWORD=YourStrong!Passw0rd123
SQL_SERVER=sqlserver
SQL_PORT=1433

# Database Connection Strings
CATALOG_DB=Server=${SQL_SERVER},${SQL_PORT};Database=DiscountManager_Catalog;User Id=sa;Password=${SQL_SA_PASSWORD};TrustServerCertificate=True;
SHOPS_DB=Server=${SQL_SERVER},${SQL_PORT};Database=DiscountManager_Shops;User Id=sa;Password=${SQL_SA_PASSWORD};TrustServerCertificate=True;
DISCOUNT_DB=Server=${SQL_SERVER},${SQL_PORT};Database=DiscountManager_Discount;User Id=sa;Password=${SQL_SA_PASSWORD};TrustServerCertificate=True;
INVENTORY_DB=Server=${SQL_SERVER},${SQL_PORT};Database=DiscountManager_Inventory;User Id=sa;Password=${SQL_SA_PASSWORD};TrustServerCertificate=True;
ORDERING_DB=Server=${SQL_SERVER},${SQL_PORT};Database=DiscountManager_Ordering;User Id=sa;Password=${SQL_SA_PASSWORD};TrustServerCertificate=True;
PAYMENT_DB=Server=${SQL_SERVER},${SQL_PORT};Database=DiscountManager_Payment;User Id=sa;Password=${SQL_SA_PASSWORD};TrustServerCertificate=True;
IDENTITY_DB=Server=${SQL_SERVER},${SQL_PORT};Database=DiscountManager_Identity;User Id=sa;Password=${SQL_SA_PASSWORD};TrustServerCertificate=True;
CUSTOMER_DB=Server=${SQL_SERVER},${SQL_PORT};Database=DiscountManager_Customer;User Id=sa;Password=${SQL_SA_PASSWORD};TrustServerCertificate=True;

# Redis Configuration
REDIS_CONNECTION=redis:6379

# Grafana Configuration
GRAFANA_PASSWORD=admin123

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Parbad Payment Gateway (if using)
PARBAD_MERCHANT_ID=your-merchant-id
PARBAD_CALLBACK_URL=https://yourdomain.com/api/payment/callback

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@discountmanager.com

# Logging
SERILOG_MINIMUM_LEVEL=Information
SERILOG_ELASTICSEARCH_URL=http://elasticsearch:9200

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_REDIS_CACHE=true
ENABLE_SEARCH=true
